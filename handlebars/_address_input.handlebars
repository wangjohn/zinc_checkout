<div class="first-name form-group">
  <label class="col-sm-2 control-label">First Name</label>
  <div class="col-sm-3">
    <input class="first-name form-control" type="text" name="first-name">
  </div>
</div>
<div class="last-name form-group">
  <label class="col-sm-2 control-label">Last Name</label>
  <div class="col-sm-3">
    <input class="last-name form-control" type="text" name="last-name">
  </div>
</div>
<div class="address-line1 form-group">
  <label class="col-sm-2 control-label">Address Line 1</label>
  <div class="col-sm-3">
    <input class="address-line1 form-control" type="text" name="address-line1">
  </div>
</div>
<div class="address-line2 form-group">
  <label class="col-sm-2 control-label">Address Line 2</label>
  <div class="col-sm-3">
    <input class="address-line2 form-control" type="text" name="address-line2">
  </div>
</div>
<div class="zip-code form-group">
  <label class="col-sm-2 control-label">Zip Code</label>
  <div class="col-sm-3">
    <input class="zip-code form-control" type="text" name="zip-code">
  </div>
</div>
<div class="city form-group">
  <label class="col-sm-2 control-label">City</label>
  <div class="col-sm-3">
    <input class="city form-control" type="text" name="city">
  </div>
</div>
<div class="state form-group">
  <label class="col-sm-2 control-label">State</label>
  <div class="col-sm-3">
    <input class="state form-control" type="text" name="state">
  </div>
</div>
<div class="country form-group">
  <label class="col-sm-2 control-label">Country</label>
  <div class="col-sm-3">
    <input class="country form-control" type="text" name="country">
  </div>
</div>
{{#if phone_number}}
  <div class="phone-number form-group">
    <label class="col-sm-2 control-label">Phone Number</label>
    <div class="col-sm-3">
      <input class="phone-number form-control" type="text" name="phone-number">
    </div>
  </div>
{{/if}}

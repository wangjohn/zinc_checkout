<h2>Variant Options</h2>
<form id="variant-options-form" class="form-horizontal" method="post">
  <div class="retailer form-group">
    <label class="col-sm-1 control-label">Retailer</label>
    <div class="col-sm-3">
      <select class="retailer form-control" name="retailer">
        <option value="macys">Macy's</option>
        <option value="jcrew">J. Crew</option>
      </select>
    </div>
  </div>
  <div class="product-url form-group">
    <label class="col-sm-1 control-label">Product Url</label>
    <div class="col-sm-3">
      <input class="product-url form-control" type="text" name="product_url">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-3">
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  </div>
</form>

<div class="review-order-information">
  <div class="retailer">
    <h2 class="page-header">Retailer</h2>
    <div class="form-horizontal">
      <div class="retailer-name form-group">
        <label class="col-sm-3 control-label">Retailer Name</label>
        <div class="col-sm-8 controls">
          <p class="form-control-static">{{ capitalize retailer }}</p>
        </div>
      </div>
    </div>
  </div>
  <div class="products">
    <h2 class="page-header">Products</h2>
    <div class="variant-option form-horizontal">
      <div class="variant-url form-group">
        <label class="col-sm-3 control-label">Product URL</label>
        <div class="col-sm-8 controls">
          <p class="form-control-static">{{ product_url }}</p>
        </div>
      </div>
      {{#each products}}
        <div class="variant-price form-group">
          <label class="col-sm-3 control-label">Price</label>
          <div class="col-sm-8 controls">
            <p class="form-control-static">{{ displayDollars unit_price }}</p>
          </div>
        </div>
        {{#each dimensions}}
          <div class="variant-description form-group">
            <label class="col-sm-3 control-label">{{ capitalize name}}</label>
            <div class="col-sm-8 controls">
              <p class="form-control-static">{{ value }}</p>
            </div>
          </div>
        {{/each}}
        <div class="variant-quantity form-group">
          <label class="col-sm-3 control-label">Quantity</label>
          <div class="col-sm-8 controls">
            <p class="form-control-static">{{ quantity }}</p>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
  <div class="shipping-address">
    <h2 class="page-header">Shipping Address</h2>
    {{> _address_display shipping_address }}
  </div>
  <div class="payment-method">
    <h2 class="page-header">Payment Information</h2>
    <div class="form-horizontal">
      <div class="payment-method-brand form-group">
        <label class="col-sm-3 control-label">Credit Card Brand</label>
        <div class="col-sm-8 controls">
          <p class="form-control-static">{{ payment_method.brand }}</p>
        </div>
      </div>
      <div class="payment-method-last-four form-group">
        <label class="col-sm-3 control-label">Credit Card</label>
        <div class="col-sm-8 controls">
          <p class="form-control-static">
            **** **** **** {{ payment_method.last_four }}
          </p>
        </div>
      </div>
    </div>
  </div>
  <div class="place-order">
    <h2 class="page-header">Review Order Total</h2>
    <form id="place-order-form" class="form-horizontal" method="post" novalidate>
      <div class="final-pricing">
        <div class="subtotal form-group">
          <label class="col-sm-3 control-label">Subtotal</label>
          <div class="col-sm-8 controls">
            <p class="form-control-static">{{ displayDollars price_components.subtotal }}</p>
          </div>
        </div>
        <div class="shipping form-group">
          <label class="col-sm-3 control-label">Shipping</label>
          <div class="col-sm-8 controls">
            <p class="form-control-static">{{ displayDollars price_components.shipping }}</p>
          </div>
        </div>
        <div class="tax form-group">
          <label class="col-sm-3 control-label">Tax</label>
          <div class="col-sm-8 controls">
            <p class="form-control-static">{{ displayDollars price_components.tax }}</p>
          </div>
        </div>
        <div class="total form-group">
          <label class="col-sm-3 control-label">Total</label>
          <div class="col-sm-8 controls">
            <p class="form-control-static">
            <strong>{{ displayDollars price_components.total }}</strong>
            </p>
          </div>
        </div>
        <div class="submit form-group">
          <div class="col-sm-offset-3 col-sm-8">
            <button type="submit" class="btn btn-primary btn-lg">Place Order</button>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>

<h2>Store Card</h2>
<form id="store-card-form" class="form-horizontal" method="post">
  <h3>Shipping Methods</h3>
  <div class="shipping-method-results"></div>
  <h3>Credit Card Information</h3>
  <div class="number form-group">
    <label class="col-sm-1 control-label">Credit Card Number</label>
    <div class="col-sm-3">
      <input class="number form-control" type="text" name="number">
    </div>
  </div>
  <div class="expiration-month form-group">
    <label class="col-sm-1 control-label">Expiration</label>
    <div class="col-sm-1">
      <select class="expiration-month form-control" name="expiration-month">
        <option selected="selected">Month</option>
        <option>01</option>
        <option>02</option>
        <option>03</option>
        <option>04</option>
        <option>05</option>
        <option>06</option>
        <option>07</option>
        <option>08</option>
        <option>09</option>
        <option>10</option>
        <option>11</option>
        <option>12</option>
      </select>
    </div>
    <div class="col-sm-2">
      <select class="expiration-year form-control" name="expiration-year">
        <option selected="selected">Year</option>
        <option>2014</option>
        <option>2015</option>
        <option>2016</option>
        <option>2017</option>
        <option>2018</option>
        <option>2019</option>
        <option>2020</option>
        <option>2021</option>
        <option>2022</option>
        <option>2023</option>
      </select>
    </div>
  </div>
  <div class="security-code form-group">
    <label class="col-sm-1 control-label">Security Code</label>
    <div class="col-sm-1">
      <input class="security-code form-control" type="text" name="security-code">
    </div>
  </div>
  <h3>Billing Address</h3>
  <div class="form-group billing-address">
    <label class="col-sm-2 control-label">Use Shipping Address</label>
    <div class="col-sm-1">
      <input class="use-shipping-address" type="checkbox" checked>
    </div>
  </div>
  <div class="billing-address-information" style="display:none;">
    <div class="card-billing-address">
      {{> _address_input }}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-3">
      <button class="btn btn-default" type="submit">Submit</button>
    </div>
  </div>
</form>

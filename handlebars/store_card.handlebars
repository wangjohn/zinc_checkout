<form id="store-card-form" class="form-horizontal" method="post" novalidate>
  <h2 class="page-header">Shipping Methods</h2>
  <div class="shipping-method-results"></div>
  <h2 class="page-header">Credit Card Information</h2>
  <div class="number form-group">
    <label class="col-sm-2 control-label">Credit Card Number</label>
    <div class="col-sm-3 controls">
      <input class="number form-control input-sm" type="text" name="number" required>
    </div>
  </div>
  <div class="expiration-month form-group">
    <label class="col-sm-2 control-label">Expiration</label>
    <div class="col-sm-1 controls">
      <select class="expiration-month form-control input-sm" name="expiration-month" required>
        <option selected="selected">Month</option>
        <option>01</option>
        <option>02</option>
        <option>03</option>
        <option>04</option>
        <option>05</option>
        <option>06</option>
        <option>07</option>
        <option>08</option>
        <option>09</option>
        <option>10</option>
        <option>11</option>
        <option>12</option>
      </select>
    </div>
    <div class="col-sm-2 controls">
      <select class="expiration-year form-control input-sm" name="expiration-year" required>
        <option selected="selected">Year</option>
        <option>2014</option>
        <option>2015</option>
        <option>2016</option>
        <option>2017</option>
        <option>2018</option>
        <option>2019</option>
        <option>2020</option>
        <option>2021</option>
        <option>2022</option>
        <option>2023</option>
      </select>
    </div>
  </div>
  <div class="security-code form-group">
    <label class="col-sm-2 control-label">Security Code</label>
    <div class="col-sm-1 controls">
      <input class="security-code form-control input-sm" type="text" name="security-code" required>
    </div>
  </div>
  <h2 class="page-header">Billing Address</h2>
  <div class="form-group billing-address">
    <label class="col-sm-2 control-label">Use Shipping Address</label>
    <div class="col-sm-2 controls">
      <input class="use-shipping-address input-sm" type="checkbox" checked>
    </div>
  </div>
  <div class="billing-address-information" style="display:none;">
    <div class="card-billing-address">
      {{> _address_input }}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-3">
      <button class="btn btn-default" type="submit">Submit</button>
    </div>
  </div>
</form>

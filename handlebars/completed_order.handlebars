<h2 class="page-header">Your order has been placed!</h2>
<div class="order-confirmation">
  <div class="retailer-information-panel col-sm-12">
    <div class="panel panel-primary">
      <div class="panel-heading">
        {{ capitalize retailer }} Order Information
      </div>
      <div class="panel-body">
        <div class="merchant-order-id col-sm-12">
          <label class="col-sm-4 control-label">Merchant Order ID</label>
          <div class="col-sm-8 controls">
            <p class="form-control-static">{{ merchant_order.merchant_order_id }}</p>
          </div>
        </div>
        <div class="merchant-order-id col-sm-12">
          <label class="col-sm-4 control-label">Email</label>
          <div class="col-sm-8 controls">
            <p class="form-control-static">{{ customer_email }}</p>
          </div>
        </div>
        <div class="merchant-order-id col-sm-12">
          <label class="col-sm-4 control-label">Shipping Information</label>
          <div class="col-sm-8 controls">
            <p class="form-control-static">{{ shipping_method.name }}: {{ shipping_method.description }}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{> _order_details this }}
</div>

<form id="shipping-methods-form" class="form-horizontal" method="post" novalidate>
  <div class="shipping-information col-sm-6">
    <h5>SHIPPING INFORMATION</h5>
    {{> _address_input this }}
  </div>
  <div class="product-details col-sm-6">
    <h5>PRODUCT DETAILS</h5>
    <div class="product-name col-sm-12">
      <p class="form-control-static">
        <a class="product-name-link" target="_blank"></a>
      </p>
    </div>
    <div class="product-results">
      <div class="spinner">
        <div class="bounce1"></div>
        <div class="bounce2"></div>
        <div class="bounce3"></div>
      </div>
    </div>
  </div>
  <div class="submit-and-price submit-wrapper col-sm-12">
    <div class="well col-sm-12">
      <div class="variant-product-info col-sm-6">
        {{> _variant_product_info }}
      </div>
      <div class="submit-button-col col-sm-6">
        <button class="submit-shipping-methods col-sm-offset-3
          col-sm-6 btn btn-primary" type="submit"
          disabled="disabled">Next</button>
      </div>
    </div>
  </div>
</form>
